<h1>Viajes</h1>  <table id = "tabla">  <% @trips.each do |trip| %>    <tr class="<%= cycle('odd', 'even') %>">        <td class="datos">         <%= link_to trip.name, trip_path(trip) %><br>        <%= truncate(strip_tags(trip.description),                 :length => 80) + ',   ' + trip.date.to_s %>      </td>        <td class="acciones">         <%= link_to 'Show', trip %><br/>         <% if trip.user == current_user %>           <%= link_to 'Edit', edit_trip_path(trip) %><br/>            <%= link_to 'Destroy', trip,                     :confirm => 'Are you sure?',                    :method => :delete %>        <% end %>      </td>    </tr>  <% end %>  </table> </br><%= link_to 'New Trip', new_trip_path %>